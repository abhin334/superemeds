#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cout<<"size:"<<endl;
    cin>>n;
    vector<int> v;
    cout<<"array:"<<endl;
    for(int i=0;i<n;i++){
        cin>>v[i];
    }
    int min_index;
    for(int i=0;i<n-1;i++){
        min_index=i;
        for(int j=i+1;j<n;j++){
            if(v[j]<v[min_index]){
                min_index=j;
            }
        }
        int t=v[i];
        v[i]=v[min_index];
        v[min_index]=t;
    }
    cout<<"sorted array:"<<endl;
    for(int i=0;i<n;i++){
        cout<<endl<<v[i]<<" ";
    }
    return 0;
}
